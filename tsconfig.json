{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node18",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
  },
  "include": ["src"]
}